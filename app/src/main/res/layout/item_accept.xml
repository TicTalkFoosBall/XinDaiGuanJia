<?xml version="1.0" encoding="utf-8"?>
<!--受理汇总-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#efefee"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="15dp"
            android:layout_height="144dp"
            android:background="#f2f2f2"
            />
        <RelativeLayout
            android:layout_width="351dp"
            android:layout_height="144dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:text="南京龙戈软件有限公司"
                android:textColor="#212121"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/next"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="18dp"
                android:text="贷款金额："
                android:textSize="12sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="50dp"
                android:text="￥"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="85dp"
                android:text="200.000,0,0,0"
                android:textSize="12sp"
                android:id="@+id/tv_money"
                />


            <TextView
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:layout_marginTop="80dp"
                android:text="贷款利率："
                android:layout_marginLeft="18dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_variety"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="80dp"
                android:text="12"
                android:textSize="12sp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="80dp"
                android:text="%/年"
                android:textSize="12sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="70dp"
                android:layout_alignParentEnd="true"
                android:text="提交待审核"
                android:background="@drawable/bottonyuanj"
                android:layout_marginEnd="23dp"
                android:id="@+id/b_1"
                android:textColor="#f1f1f1"
                />
            <TextView
                android:layout_width="341dp"
                android:layout_height="1dp"
                android:background="#ebebeb"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="10dp"

                />




            <Button
                android:layout_width="72dp"
                android:layout_height="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_biankuang"
                android:id="@+id/b_2"
                android:textColor="#f6822b"
                android:textSize="10dp"
                android:text="抵押担保"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:text="期限： "
            android:layout_marginLeft="210dp"
            android:layout_marginTop="125dp"
            android:textColor="#2e2e2e "
            />



            <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:text="2019.01.02"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="125dp"
            android:textColor="#2e2e2e "
            android:id="@+id/tv_deadline"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="-"
                android:layout_marginLeft="292dp"
                android:layout_marginTop="125dp"
                android:textColor="#2e2e2e "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="2019.01.02"
                android:layout_marginLeft="297dp"
                android:layout_marginTop="125dp"
                android:textColor="#2e2e2e "
                android:id="@+id/tv_deadline2"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="15dp"
            android:layout_height="144dp"
            android:background="#f2f2"
            android:layout_marginLeft="345dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f2f2f2"
            />

    </LinearLayout>



</LinearLayout>
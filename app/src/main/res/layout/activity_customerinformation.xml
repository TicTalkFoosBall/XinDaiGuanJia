<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomerInformationActivity"
    android:orientation="vertical"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <hxz.www.commonbase.view.KLToolbar
           android:id="@+id/toolbar"
           android:visibility="visible"
           android:layout_width="match_parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:tb_leftImage="@mipmap/back"
           app:tb_title="客户信息"
           android:layout_height="wrap_content" />

       <!--body-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#DAD9D9"
           android:orientation="vertical"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="171dp"
               android:padding="10dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:background="@drawable/contact_edit_edittext_focused_lan"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tv_name"
                   android:text=" "
                   android:textSize="16sp"
                   android:textColor="#fefefe"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="15sp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="居民身份证号码"
                   android:textSize="12sp"
                   android:textColor="#fefefe"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="50sp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:id="@+id/tv_idNumber"
                   android:textColor="#fefefe"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="68sp"
                   />
               <TextView
                   android:layout_width="310dp"
                   android:layout_height="1dp"
                   android:background="#ffffff"
                   android:layout_marginTop="110dp"
                   android:layout_marginLeft="20dp"
                   />
               <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="130sp"
                   android:src="@mipmap/tel"
                   />
               <TextView
                   android:id="@+id/tv_phoneNumber"
                   android:layout_width="100dp"
                   android:layout_height="30dp"
                   android:textSize="12sp"
                   android:textColor="#ffffff"
                   android:layout_marginLeft="50dp"
                   android:layout_marginTop="130sp"
                   android:text=" "
                   />

               <Button
                   android:layout_width="86dp"
                   android:layout_height="26dp"
                   android:text="身份证照片"
                   android:visibility="gone"
                   android:layout_marginLeft="250dp"
                   android:layout_marginTop="125sp"
                   android:textColor="#398eeb"
                   android:textSize="12sp"
                   android:background="@drawable/bottonbai"
                   />

           </RelativeLayout>


       </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:background="#DAD9D9"
           />

       <TextView
           android:id="@+id/tv_clientPreview"
           android:layout_width="match_parent"
           android:textColor="@color/black"
           android:text="业务一览"
           android:textSize="14sp"
           android:gravity="center_vertical"
           android:paddingLeft="15dp"
           android:layout_height="45dp"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="15dp"
           android:background="#f2f2f2"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:orientation="horizontal"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:text="性         别"
                   android:textSize="14sp"
                   android:textColor="#777777"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textColor="#212121"
                   android:text=" "
                   android:gravity="center"
                   android:id="@+id/tv_sex"
                   />

           </RelativeLayout>

           <TextView
               android:layout_width="340dp"
               android:layout_height="1dp"
               android:background="#efefee"
               android:layout_marginLeft="27dp"
               />
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:orientation="horizontal"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:text="联系地址"
                   android:textSize="14sp"
                   android:textColor="#777777"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textColor="#212121"
                   android:text=" "
                   android:gravity="center"
                   android:id="@+id/tv_location"
                   />

           </RelativeLayout>
           <TextView
               android:layout_width="340dp"
               android:layout_height="1dp"
               android:background="#efefee"
               android:layout_marginLeft="27dp"
               />
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:orientation="horizontal"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:text="婚姻状况"
                   android:textSize="14sp"
                   android:textColor="#777777"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textColor="#212121"
                   android:text=" "
                   android:gravity="center"
                   android:id="@+id/tv_marry"
                   />

           </RelativeLayout>
           <TextView
               android:layout_width="340dp"
               android:layout_height="1dp"
               android:background="#efefee"
               android:layout_marginLeft="27dp"
               />

       </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="15dp"
           android:background="#f2f2f2"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:orientation="vertical"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:orientation="horizontal"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:text="客户来源"
                   android:textSize="14sp"
                   android:textColor="#777777"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textColor="#212121"
                   android:text="-"
                   android:gravity="center"
                   android:id="@+id/tv_from"
                   />

           </RelativeLayout>
           <TextView
               android:layout_width="340dp"
               android:layout_height="1dp"
               android:background="#efefee"
               android:layout_marginLeft="27dp"
               />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:orientation="horizontal"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:text="客户经理"
                   android:textSize="14sp"
                   android:textColor="#777777"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textColor="#212121"
                   android:text=" "
                   android:gravity="center"
                   android:id="@+id/tv_manager"
                   />
           </RelativeLayout>

           <TextView
               android:layout_width="340dp"
               android:layout_height="1dp"
               android:background="#efefee"
               android:layout_marginLeft="27dp"
               />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:orientation="horizontal"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:text="经办部门"
                   android:textSize="14sp"
                   android:textColor="#777777"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textColor="#212121"
                   android:text="-"
                   android:gravity="center"
                   android:id="@+id/tv_owner"
                   />
           </RelativeLayout>

           <TextView
               android:layout_width="340dp"
               android:layout_height="1dp"
               android:background="#efefee"
               android:layout_marginLeft="27dp"
               />
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:orientation="horizontal"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="45dp"
                   android:text="所属公司"
                   android:textSize="14sp"
                   android:textColor="#777777"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:textColor="#212121"
                   android:text="-"
                   android:gravity="center"
                   android:id="@+id/tv_company"
                   />
           </RelativeLayout>
       </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#f2f2f2"
           />


   </LinearLayout>

</ScrollView>
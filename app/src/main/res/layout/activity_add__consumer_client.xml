<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Add_ConsumerClientActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/iv_back"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="添加个人客户"
                android:textSize="22sp"
                android:textColor="#212121"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginLeft="27dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="200dp"

                android:layout_height="40dp"
                android:text="拍摄/上传您的二代身份证"
                android:gravity="center"
                android:textColor="#212121"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="95dp"
                android:id="@+id/iv_front"
                android:src="@mipmap/ocr_id_front"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15sp"
                />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="95dp"
                android:id="@+id/iv_ba"
                android:src="@mipmap/ocr_id_back"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="200sp"

                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f2f2f2"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="姓名"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:id="@+id/ev_name"
                    android:hint="请输入姓名"
                    android:textColor="#777777"
                    android:textSize="14dp"
                    android:background="@null"
                    android:layout_marginLeft="100dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="身份证号"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:id="@+id/ev_idnumber"
                    android:hint="请输入身份证号"
                    android:textColor="#777777"
                    android:textSize="14dp"
                    android:background="@null"
                    android:layout_marginLeft="100dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="手机号"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:id="@+id/ev_callnumber"
                    android:hint="请输入手机号"
                    android:textColor="#777777"
                    android:textSize="14dp"
                    android:background="@null"
                    android:layout_marginLeft="100dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f2f2f2"
            android:layout_marginTop="10dp"
            />
        <!--/////////////////////////////////////-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                   android:gravity="center"
                    android:text="性别"
                    android:layout_marginLeft="20dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="150dp"
                    android:gravity="right"
                    android:text="请选择性别"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_sex"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_sex"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                   android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:text="婚姻状态"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:textSize="15sp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:gravity="right"
                    android:text="请选择婚姻状态"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_maritalstatus"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_maritalstatus"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    />



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="联系地址"
                    android:textColor="#212121"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:id="@+id/ev_site"
                    android:hint="请输入联系地址"
                    android:textColor="#777777"
                    android:textSize="14dp"
                    android:background="@null"
                    android:layout_marginLeft="100dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f2f2f2"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:text="客户来源"
                    android:textColor="#212121"
                    android:textSize="15sp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="136dp"
                    android:gravity="right"
                    android:text="请选择客户来源"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_customersource"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_customersource"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    />



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="客户经理"
                    android:textColor="#212121"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:id="@+id/tv_manager"
                    android:text="李忆新"
                    android:textColor="#777777"
                    android:textSize="14dp"
                    android:background="@null"
                    android:layout_marginLeft="100dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f2f2f2"
            android:layout_marginTop="10dp"
            />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:orientation="vertical"
           >
           <EditText
               android:id="@+id/ev_opinion"
               android:layout_width="351dp"
               android:layout_height="83dp"
               android:background="@drawable/bg_edittext"
               android:padding="15dp"
               android:textSize="14sp"
               android:singleLine="true"
               android:hint="请填写审批意见"
               android:layout_marginLeft="20dp"
               android:textColor="#949494"
               android:gravity="left"
               android:focusable="true"
               android:focusableInTouchMode="true"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="15dp"
               android:background="#f2f2f2"
               android:layout_marginTop="10dp"
               />
           <Button
               android:layout_width="351dp"
               android:layout_height="44dp"
               android:gravity="center"
               android:text="确定并添加"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:background="#398eeb"
               android:layout_marginLeft="15sp"
               />



       </LinearLayout>



    </LinearLayout>
</ScrollView>
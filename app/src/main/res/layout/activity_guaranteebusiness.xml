<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GuaranteeBusinessActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#398EEB"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/iv_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="担保业务"
                android:textSize="22sp"
                android:textColor="#f2f2f2"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginLeft="27dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="150dp"
                android:layout_marginLeft="17dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/contact_edit_edittext_focused"
                    >

                    <RelativeLayout
                        android:layout_width="351dp"
                        android:layout_height="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_company"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="23dp"
                            android:text="南京龙戈软件有限公司"
                            android:textColor="#212121"
                            android:textSize="16sp" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/next"
                            android:layout_marginLeft="320dp"
                            android:layout_marginTop="16dp"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:text="客户信息"
                            android:textSize="11sp"
                            android:gravity="bottom"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="285dp"
                            android:id="@+id/tv_message"
                            android:textColor="#777777"

                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="10dp"
                            android:text="0517-8686 7878"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            />
                        <TextView
                            android:layout_width="341dp"
                            android:layout_height="1dp"
                            android:background="#ebebeb"
                            android:layout_marginTop="95dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tv_callnumber"
                            />
                        <TextView
                            android:layout_width="351dp"
                            android:layout_height="1dp"
                            android:layout_below="@id/tv_callnumber"
                            android:background="#E3E3E3"
                            />
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@mipmap/location"
                            android:layout_marginTop="110dp"
                            android:layout_marginLeft="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/tv_site"
                            android:text="江苏省淮安市天意县永林南路12号"
                            android:layout_marginTop="110dp"
                            android:layout_marginLeft="45dp"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            />



                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <!--body-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="235dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="产品类型"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="136dp"
                    android:gravity="right"
                    android:text="请选择客户类型"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_type"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_type"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"

                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="贷款金额"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="136dp"
                    android:gravity="right"
                    android:hint="请选择客户类型"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/et_sum"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="14sp"
                    android:layout_height="20dp"
                    android:text="月"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="担保费率"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="123dp"
                    android:gravity="right"
                    android:text="请选择担保利率  %"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_rate"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_rate"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"

                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="开始日期"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="106dp"
                    android:gravity="right"
                    android:text="请选择贷款开始日期"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_starttime"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_starttime"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"

                    />



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="贷款期限"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="136dp"
                    android:gravity="right"
                    android:hint="请选择贷款期限"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/et_deadline"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="14sp"
                    android:layout_height="20dp"
                    android:text="月"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="贷款用途"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="136dp"
                    android:gravity="right"
                    android:text="请选择贷款用途"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_use"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_use"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="还款方式"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="136dp"
                    android:gravity="right"
                    android:text="请选择还款方式"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_way"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_way"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="担保方式"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="136dp"
                    android:gravity="right"
                    android:text="请选择担保方式"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:id="@+id/tv_way2"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/sp_way2"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f2f2f2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="项目附件"
                    android:textColor="#212121"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="235dp"
                    android:src="@mipmap/next"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f2f2f2"
                />
            <Button
                android:layout_width="351dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="确定并提交"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="#398eeb"
                android:layout_marginLeft="15sp"
                />










        </LinearLayout>
    </RelativeLayout>

</ScrollView>